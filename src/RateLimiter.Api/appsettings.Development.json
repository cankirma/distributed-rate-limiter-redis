{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "RateLimiter": {
    "Redis": {
      "ConnectionString": "localhost:6379",
      "KeyPrefix": "rl-dev"
    },
    "Policies": [
      {
        "PolicyName": "auth-login",
        "PermitLimit": 10,
        "Window": "00:01:00"
      },
      {
        "PolicyName": "search",
        "PermitLimit": 200,
        "Window": "00:00:30"
      }
    ],
    "Identity": {
      "tenant": {
        "Component": "Custom",
        "Header": "x-demo-tenant",
        "UseIpAddressFallback": true
      }
    }
  }
}
